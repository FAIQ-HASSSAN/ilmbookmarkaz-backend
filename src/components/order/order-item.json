{
    "collectionName": "components_order_order_items",
    "info": {
        "displayName": "Order Item",
        "description": "Individual item in an order"
    },
    "options": {},
    "attributes": {
        "productName": {
            "type": "string",
            "required": true
        },
        "productSku": {
            "type": "string"
        },
        "quantity": {
            "type": "integer",
            "required": true,
            "min": 1
        },
        "price": {
            "type": "decimal",
            "required": true
        },
        "variant": {
            "type": "string"
        },
        "total": {
            "type": "decimal",
            "required": true
        },
        "product": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::product.product"
        }
    }
}