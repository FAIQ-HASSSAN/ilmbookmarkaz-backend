{
    "kind": "collectionType",
    "collectionName": "reviews",
    "info": {
        "singularName": "review",
        "pluralName": "reviews",
        "displayName": "Review"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "product": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::product.product"
        },
        "user": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::ezimart-user.ezimart-user"
        },
        "rating": {
            "type": "integer",
            "required": true,
            "min": 1,
            "max": 5
        },
        "title": {
            "type": "string"
        },
        "comment": {
            "type": "text",
            "required": true
        },
        "images": {
            "type": "media",
            "multiple": true,
            "allowedTypes": [
                "images"
            ]
        },
        "verified": {
            "type": "boolean",
            "default": false
        },
        "helpful": {
            "type": "integer",
            "default": 0
        }
    }
}