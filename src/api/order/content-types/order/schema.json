{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "orderNumber": {
      "type": "string",
      "required": false,
      "unique": false
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::ezimart-user.ezimart-user"
    },
    "items": {
      "type": "component",
      "component": "order.order-item",
      "repeatable": true,
      "required": true
    },
    "subtotal": {
      "type": "decimal",
      "required": false
    },
    "shipping": {
      "type": "decimal",
      "default": 0
    },
    "tax": {
      "type": "decimal",
      "default": 0
    },
    "discount": {
      "type": "decimal",
      "default": 0
    },
    "total": {
      "type": "decimal",
      "required": false
    },
    "status": {
      "type": "enumeration",
      "default": "pending",
      "enum": [
        "pending",
        "processing",
        "shipped",
        "delivered",
        "cancelled",
        "refunded"
      ]
    },
    "paymentMethod": {
      "type": "enumeration",
      "default": "cod",
      "enum": [
        "cod",
        "card",
        "bank_transfer"
      ]
    },
    "paymentStatus": {
      "type": "enumeration",
      "default": "pending",
      "enum": [
        "pending",
        "paid",
        "failed",
        "refunded"
      ]
    },
    "shippingAddress": {
      "type": "component",
      "component": "order.shipping-address",
      "repeatable": false,
      "required": true
    },
    "billingAddress": {
      "type": "component",
      "component": "order.shipping-address",
      "repeatable": false
    },
    "notes": {
      "type": "text"
    },
    "trackingNumber": {
      "type": "string"
    }
  }
}
