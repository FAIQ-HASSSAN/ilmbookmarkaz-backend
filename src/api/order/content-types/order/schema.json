{
    "kind": "collectionType",
    "collectionName": "orders",
    "info": {
        "singularName": "order",
        "pluralName": "orders",
        "displayName": "Order"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "orderNumber": {
            "type": "string",
            "required": true,
            "unique": true
        },
        "user": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::ezimart-user.ezimart-user"
        },
        "items": {
            "type": "component",
            "repeatable": true,
            "component": "order.order-item",
            "required": true
        },
        "subtotal": {
            "type": "decimal",
            "required": true
        },
        "shipping": {
            "type": "decimal",
            "default": 0
        },
        "tax": {
            "type": "decimal",
            "default": 0
        },
        "discount": {
            "type": "decimal",
            "default": 0
        },
        "total": {
            "type": "decimal",
            "required": true
        },
        "status": {
            "type": "enumeration",
            "enum": [
                "pending",
                "processing",
                "shipped",
                "delivered",
                "cancelled",
                "refunded"
            ],
            "default": "pending"
        },
        "paymentMethod": {
            "type": "enumeration",
            "enum": [
                "cod",
                "card",
                "bank_transfer"
            ],
            "default": "cod"
        },
        "paymentStatus": {
            "type": "enumeration",
            "enum": [
                "pending",
                "paid",
                "failed",
                "refunded"
            ],
            "default": "pending"
        },
        "shippingAddress": {
            "type": "component",
            "repeatable": false,
            "component": "order.shipping-address",
            "required": true
        },
        "billingAddress": {
            "type": "component",
            "repeatable": false,
            "component": "order.shipping-address"
        },
        "notes": {
            "type": "text"
        },
        "trackingNumber": {
            "type": "string"
        }
    }
}